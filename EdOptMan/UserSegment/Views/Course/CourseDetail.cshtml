@model UserSegment.Models.CourseEntryModel

@{
    ViewData["Title"] = "Course Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <h1 class="page-title">
            <span>📘</span>
            Course Details
        </h1>
        <a href="@Url.Action("Index", "Course")" class="btn-back">← Back to Course List</a>
    </div>

    <div class="details-card">
        <h2>@Model.CourseName (@Model.CourseCode)</h2>
        <p class="subtitle">Course Type: <strong>@Model.CourseType</strong></p>
        <hr />

        <div class="details-grid">
            <div class="detail-item">
                <label>📚 Department</label>
                <p>@Model.DepartmentId</p> @* Replace with DepartmentName if available *@
            </div>

            <div class="detail-item">
                <label>🎓 Instructor</label>
                <p>@Model.InstructorId</p> @* Replace with InstructorName if available *@
            </div>

            <div class="detail-item">
                <label>🏆 Credits</label>
                <p>@Model.Credits</p>
            </div>

            <div class="detail-item">
                <label>⏱ Duration (hours)</label>
                <p>@Model.DurationHours</p>
            </div>

            <div class="detail-item">
                <label>👥 Max Students</label>
                <p>@(Model.MaxStudents.HasValue? Model.MaxStudents.ToString() : "N/A")</p>
            </div>

            <div class="detail-item">
                <label>📅 Start Date</label>
                <p>@Model.StartDate.ToString("dd MMM yyyy")</p>
            </div>

            <div class="detail-item">
                <label>📅 End Date</label>
                <p>@Model.EndDate.ToString("dd MMM yyyy")</p>
            </div>

            <div class="detail-item">
                <label>📌 Status</label>
                <p style="color:@(Model.Status == "Active" ? "green" : "red"); font-weight:600;">
                    @Model.Status
                </p>
            </div>
        </div>

        <hr />
        <div class="detail-section">
            <h3>📝 Description</h3>
            <p>@Model.Description</p>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Prerequisites))
        {
            <div class="detail-section">
                <h3>📖 Prerequisites</h3>
                <p>@Model.Prerequisites</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.LearningObjectives))
        {
            <div class="detail-section">
                <h3>🎯 Learning Objectives</h3>
                <p>@Model.LearningObjectives</p>
            </div>
        }

        <div class="actions">
            <a href="@Url.Action("EditCourse", "Course", new { id = Model.Id })" class="btn-edit">✏️ Edit</a>

            @using (Html.BeginForm("DeleteCourse", "Course", new { id = Model.Id }, FormMethod.Post, null, new { @class = "inline-form", onsubmit = "return confirm('Are you sure you want to delete this course?');" }))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-delete">🗑️ Delete</button>
            }
        </div>
    </div>
</div>
