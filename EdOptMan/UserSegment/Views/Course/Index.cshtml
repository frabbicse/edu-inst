@model IEnumerable<UserSegment.Models.CourseEntryModel>

@{
    ViewData["Title"] = "Course List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var res = ViewBag.Success;
}

@if (res?.Result == true)
{
    <div style="background-color: #d4edda; color: #155724; padding: 12px; border-radius: 6px; margin-bottom: 15px;">
        ✅ Course information saved/updated successfully!
    </div>
}
@if (res?.Result == false)
{
    <div style="background-color: #f8d7da; color: #721c24; padding: 12px; border-radius: 6px; margin-bottom: 15px;">
        ❌ Failed to save course information. Please try again.
    </div>
}

<div class="container">
    <div class="page-header">
        <h1 class="page-title">
            <span>📘</span>
            Course List
        </h1>
        <a href="@Url.Action("Index", "Home")" class="btn-back">← Back to Home</a>
    </div>

    <div class="page-header">
        <h2>🎓 Manage Courses</h2>
        <a href="@Url.Action("CourseInfo", "Course")" class="btn-primary">➕ Add New Course</a>
    </div>

    <div class="table-wrapper">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Name</th>
                    <th>Department</th>
                    <th>Type</th>
                    <th>Credits</th>
                    <th>Duration (hrs)</th>
                    <th>Instructor</th>
                    <th>Status</th>
                    <th style="width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.CourseCode</td>
                            <td>@course.CourseName</td>
                            <td>@course.DepartmentId</td> <!-- replace with DepartmentName if available -->
                            <td>@course.CourseType</td>
                            <td>@course.Credits</td>
                            <td>@course.DurationHours</td>
                            <td>@course.InstructorId</td> <!-- replace with InstructorName if available -->
                            <td>
                                <span style="color:@(course.Status == "Active" ? "green" : "red"); font-weight:600;">
                                    @course.Status
                                </span>
                            </td>
                            <td class="actions">
                                <a href="@Url.Action("EditCourse", "Course", new { id = course.Id })" class="btn-edit">✏️ Edit</a>
                                <a href="@Url.Action("CourseDetail", "Course", new { id = course.Id })" class="btn-view">👁️ View</a>
                                @using (Html.BeginForm("DeleteCourse", "Course", new { id = course.Id }, FormMethod.Post, null, new { @class = "inline-form", onsubmit = "return confirm('Are you sure you want to delete this course?');" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn-delete">🗑️ Delete</button>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" style="text-align:center; padding:20px;">No courses found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
